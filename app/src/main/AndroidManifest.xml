<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.foundationdemo">

    <!-- 访问网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 访问通讯录联系人权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:configChanges="keyboardHidden|screenSize|orientation"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".phonecall.PhoneCallActivity" />
        <activity android:name=".sms.SMSActivity" />
        <activity android:name=".file.FileActivity" />
        <activity android:name=".xmlparsepull.XMLParsePullActivity" />
        <activity android:name=".sharedpreference.SharedPreferencesActivity" />
        <activity android:name=".sqlite.SQLiteActivity" />
        <activity android:name=".provider.ProviderActivity" />
        <!-- authorities 是provider的唯一标识 ，name是要注册的ContentProvider的路径 -->
        <provider
            android:name=".provider.PersonProvider"
            android:authorities="com.example.administrator.foundationdemo.provider.PersonProvider" />

        <activity android:name=".provider.SourceProviderActivity" />
        <activity android:name=".contactsprovider.ContactsActivity" />
        <activity android:name=".http.HttpImageActivity" />
        <activity android:name=".animation.AnimationActivity" />
        <activity android:name=".animation.FrameAnimationActivity" />
        <activity android:name=".myfileobserver.FileObserverActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"></activity>
    </application>

</manifest>
