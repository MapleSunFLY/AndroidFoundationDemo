<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.foundationdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".phonecall.PhoneCallActivity" />
        <activity android:name=".sms.SMSActivity" />
        <activity android:name=".file.FileActivity" />
        <activity android:name=".xmlparsepull.XMLParsePullActivity" />
        <activity android:name=".sharedpreference.SharedPreferencesActivity" />
        <activity android:name=".sqlite.SQLiteActivity" />
        <activity android:name=".provider.ProviderActivity"/>
        <!--authorities 是provider的唯一标识 ，name是要注册的ContentProvider的路径-->
        <provider
            android:authorities="com.example.administrator.foundationdemo.provider.PersonProvider"
            android:name="com.example.administrator.foundationdemo.provider.PersonProvider"/>
    </application>

</manifest>
